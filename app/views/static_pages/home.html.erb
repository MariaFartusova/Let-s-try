<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/question_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Question Feed</h3>
      <%= will_paginate @questions %>
      <%= render 'questions/show_all' %>
      <%= will_paginate @questions %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1> QA </h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>


