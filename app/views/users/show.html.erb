<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <h3><%= @user.name %></h3>
      </h1>
    </section>
  </aside>
  
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Questions       [<%= @user.microposts.count %>]</h3>
      <ol class="microposts">   
        <%= render @microposts %>
       </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>